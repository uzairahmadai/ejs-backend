<!-- Custom JavaScript for Calculator -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Get all input elements
    const vehiclePrice = document.getElementById('vehiclePrice');
    const vehiclePriceRange = document.getElementById('vehiclePriceRange');
    const downPayment = document.getElementById('downPayment');
    const downPaymentRange = document.getElementById('downPaymentRange');
    const interestRate = document.getElementById('interestRate');
    const interestRateRange = document.getElementById('interestRateRange');
    const loanTerm = document.getElementById('loanTerm');
    const loanTermRange = document.getElementById('loanTermRange');
    
    // Get result elements
    const monthlyPayment = document.getElementById('monthlyPayment');
    const totalLoan = document.getElementById('totalLoan');
    const totalInterest = document.getElementById('totalInterest');
    const totalCost = document.getElementById('totalCost');
    
    // Sync number inputs with range inputs
    function syncInputs(input, range) {
        input.addEventListener('input', function() {
            range.value = this.value;
            calculateLoan();
        });
        
        range.addEventListener('input', function() {
            input.value = this.value;
            calculateLoan();
        });
    }
    
    syncInputs(vehiclePrice, vehiclePriceRange);
    syncInputs(downPayment, downPaymentRange);
    syncInputs(interestRate, interestRateRange);
    syncInputs(loanTerm, loanTermRange);
    
    // Calculate loan
    function calculateLoan() {
        const principal = vehiclePrice.value - downPayment.value;
        const monthlyRate = (interestRate.value / 100) / 12;
        const numberOfPayments = loanTerm.value * 12;
        
        // Calculate monthly payment
        const monthly = principal * monthlyRate * Math.pow(1 + monthlyRate, numberOfPayments) / 
                       (Math.pow(1 + monthlyRate, numberOfPayments) - 1);
        
        // Calculate totals
        const totalAmount = monthly * numberOfPayments;
        const interestAmount = totalAmount - principal;
        
        // Update display
        monthlyPayment.textContent = `$${monthly.toFixed(2)}`;
        totalLoan.textContent = `$${principal.toFixed(2)}`;
        totalInterest.textContent = `$${interestAmount.toFixed(2)}`;
        totalCost.textContent = `$${totalAmount.toFixed(2)}`;
    }
    
    // Reset calculator
    document.getElementById('resetCalculator').addEventListener('click', function() {
        vehiclePrice.value = 30000;
        vehiclePriceRange.value = 30000;
        downPayment.value = 5000;
        downPaymentRange.value = 5000;
        interestRate.value = 4.5;
        interestRateRange.value = 4.5;
        loanTerm.value = 5;
        loanTermRange.value = 5;
        calculateLoan();
    });
    
    // Initial calculation
    calculateLoan();
});
</script>
