<!-- Banner area start -->
<section class="rts-banner-area two bg_image_two jarallax">
    <div class="container">
        <div class="row align-items-center">
            <!-- Banner Text Content -->
            <div class="col-lg-8">
                <div class="banner-area-two">
                    <div class="banner-content-area">
                        <h1 class="title wow fadeInUp" data-wow-delay=".2s" data-wow-duration="1s">
                            Unleash the Road: Discover Your Perfect <span>Cars</span> Ride Today
                        </h1>
                        <h2 class="price wow fadeInUp" data-wow-delay=".4s" data-wow-duration="1s">
                            <span class="currency">$</span>122 <span class="period">/ Month</span>
                        </h2>
                        <a href="/about" class="rts-btn radius-small btn-primary wow fadeInUp" data-wow-delay=".6s" data-wow-duration="1s">
                            Learn More
                        </a>
                    </div>
                </div>
            </div>

            <!-- Tabs & Select Filters -->
            <div class="col-lg-4">
                <div class="banner-right-side-two wow fadeInRight" data-wow-delay=".8s" data-wow-duration="1s">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="new-car-tab" data-bs-toggle="tab" data-bs-target="#new-car" type="button" role="tab" aria-controls="new-car" aria-selected="true">
                                New Car
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="used-car-tab" data-bs-toggle="tab" data-bs-target="#used-car" type="button" role="tab" aria-controls="used-car" aria-selected="false">
                                Used Car
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <% ['new-car', 'used-car'].forEach(function(tabId, i) { %>
                        <div class="tab-pane fade <%= i === 0 ? 'show active' : '' %>" id="<%= tabId %>" role="tabpanel" aria-labelledby="<%= tabId %>-tab">
                            <div class="select-area-down">
                                <% const selects = [
                                    { name: 'Car Make', options: ['Mazda', 'Citroen', 'Honda', 'Mitsubishi', 'Peugeot'] },
                                    { name: 'Car Model', options: ['155', '151', '150', '152', '156'] },
                                    { name: 'Price', options: ['22,000$', '27,000$', '30,000$', '32,000$', '38,000$'] },
                                    { name: 'Location', options: ['USA', 'UK', 'Canada', 'Australia', 'China'] }
                                ]; %>

                                <% selects.forEach(function(select, j) { %>
                                    <form class="<%= j === 0 ? '' : 'select-2' %>" action="#" method="get">
                                        <select name="select_<%= j %>" class="<%= j === 0 ? 'mySelect' : 'my_select2' %>">
                                            <option selected><%= select.name %></option>
                                            <% select.options.forEach(function(opt) { %>
                                                <option value="<%= opt %>"><%= opt %></option>
                                            <% }); %>
                                        </select>
                                    </form>
                                <% }); %>

                                <button type="submit" class="rts-btn radius-small icon btn-primary">
                                    <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M10.69 10.69L13 13M12.3333 6.68575C12.3333 9.826 9.796 12.3715 6.667 12.3715C3.53725 12.3715 1 9.826 1 6.6865C1 3.54475 3.53725 1 6.66625 1C9.796 1 12.3333 3.5455 12.3333 6.68575Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    </svg>
                                    Search
                                </button>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Banner area end -->