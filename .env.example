# Application
NODE_ENV=development
PORT=3000
APP_NAME=AutoVault
APP_URL=http://localhost:3000
API_VERSION=v1
DEBUG=false
TZ=UTC

# Database
MONGODB_URI=mongodb://localhost:27017/autovault
MONGODB_USER=dbuser
MONGODB_PASS=dbpassword
MONGODB_AUTH_SOURCE=admin
MONGODB_DEBUG=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=autovault:
REDIS_TTL=3600

# Session
SESSION_SECRET=your-session-secret-key
SESSION_NAME=autovault.sid
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_MAX_AGE=86400000

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM_EMAIL=noreply@autovault.com
SMTP_FROM_NAME=AutoVault

# File Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_DIRECTORY=uploads
UPLOAD_TEMP_DIR=tmp

# Security
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_EXPOSED_HEADERS=Content-Range,X-Content-Range
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later.

PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_DIR=logs
LOG_FILE=app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7
LOG_COLORIZE=true

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Monitoring
MONITOR_ENABLED=true
MONITOR_INTERVAL=60
MONITOR_CPU_THRESHOLD=80
MONITOR_MEMORY_THRESHOLD=80
MONITOR_DISK_THRESHOLD=90

# Company Info
COMPANY_NAME=AutoVault
COMPANY_EMAIL=info@autovault.com
COMPANY_PHONE=+1234567890
COMPANY_ADDRESS=123 Main St, City, Country
COMPANY_WEBSITE=https://autovault.com

# Social Media
FACEBOOK_URL=https://facebook.com/autovault
TWITTER_URL=https://twitter.com/autovault
INSTAGRAM_URL=https://instagram.com/autovault
LINKEDIN_URL=https://linkedin.com/company/autovault

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXXXXX

# Feature Flags
FEATURE_TEST_DRIVE=true
FEATURE_FINANCING=true
FEATURE_TRADE_IN=true
FEATURE_LIVE_CHAT=true
FEATURE_NOTIFICATIONS=true
FEATURE_REVIEWS=true

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1
